# ============================================
# MUHOYA GARAGE BACKEND - ENVIRONMENT VARIABLES
# ============================================

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_postgres_password
DB_NAME=muhoya_garage

# Database Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=10

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d

# Security
BCRYPT_ROUNDS=10

# CORS Settings
CORS_ORIGIN=http://localhost:5173

# API Settings
API_PREFIX=/api
API_VERSION=v1

# Logging
LOG_LEVEL=debug

# File Upload (if needed later)
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Email Configuration (optional - for invoices)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# EMAIL_FROM=noreply@muhoya.com

# Pagination Defaults
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
